- # Required locals:
- #   id - Ratable item ID
- #   url - POST url to add rating.
- #   rating - Rating value for current user.
- #   ratable: ratable item (restaurant/dish)

%span#ratable-rater{:id => ratable.id}
  My rating:
  - options = {:'data-method' => 'post', :'data-remote' => 'true', :'data-url' => polymorphic_path([ratable, 'rate'])}
  - rating_value = get_user_rating_value(ratable)
  - if not rating_value then options[:prompt] = "Rate me" end
  = select_tag "rating", options_for_select((1..5), rating_value), options

%span.ratable-rater-flash#ratable_rater_flash{:id => ratable.id}
