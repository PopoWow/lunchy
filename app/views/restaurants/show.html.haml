%p#notice= notice

%a{:href => root_path}home

%p
  %h2= @restaurant.name
  %h4= @restaurant.description

%table
  - @restaurant.courses.includes(:dishes).order("position").each do |course|
    %tr
      %td
        %h3= "#{course.name} pos:#{course.position}"
    =render :partial => "desc_row", :locals => { :item => course }
      
    -course.dishes.each do |dish|
      %tr
        %td
          %h5
            %a{:href => dish_path(dish)}= dish.name
        %td= dish.price
      =render :partial => "desc_row", :locals => { :item => dish }
